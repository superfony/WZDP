<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

    <LinearLayout
        android:id="@+id/queryRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dip"
        android:layout_marginLeft="200dip"
        android:background="@drawable/searchbg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dip"
            android:layout_marginTop="50dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="工厂:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="库存地点:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="物料编码:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="项目名称:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="采购订单号:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_title_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:text="供应商名称:"
                    android:textColor="@color/itemtextcolor"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/search_et_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_btn_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_table"
            android:layout_marginLeft="250dip"
            android:layout_marginTop="50dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_btn_bg">
            </Button>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dip"
                android:background="@drawable/cancel_btn_bg">
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>