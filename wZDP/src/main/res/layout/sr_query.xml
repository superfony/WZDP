<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none" >

    <RelativeLayout
        android:id="@+id/queryRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:background="@drawable/searchbg" >

        <LinearLayout
            android:id="@+id/search_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="50dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/search_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                    android:id="@+id/search_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                    android:id="@+id/search_title_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                    android:id="@+id/search_title_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                    android:id="@+id/search_title_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
                <TextView
                    android:id="@+id/search_title_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/itemtextcolor"
                    android:ems="6"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/search_et_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_btn_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_table"
            android:layout_marginLeft="120dip"
            android:layout_marginTop="50dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search_btn_bg">
            </Button>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:background="@drawable/cancel_btn_bg" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>