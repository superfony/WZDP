<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/com.epsmart.wzdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/supply_manage"
    tools:ignore="HardcodedText"
    tools:context=".ContractActivity" >

	 <com.epsmart.wzdp.view.CircleLayoutTwo
        android:id="@+id/contract_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        circle:firstChildPosition="South" 
        circle:circleBackground="@drawable/circle"
        circle:rotateToCenter="true" 
        circle:isRotating="true" 
       
        >
               
<!--         circle:circleBackground="@drawable/green"  > -->

     <com.epsmart.wzdp.view.CircleImageView
            android:id="@+id/plan_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_allplan_btn"
            circle:name="@string/plan_control" />

        <com.epsmart.wzdp.view.CircleImageView
            android:id="@+id/progress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_allprogress_btn"
            circle:name="@string/progress_control" />

    </com.epsmart.wzdp.view.CircleLayoutTwo>



</RelativeLayout>